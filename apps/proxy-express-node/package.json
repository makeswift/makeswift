{
  "name": "visual-editor-proxy",
  "version": "1.0.0",
  "description": "SSR proxy server for visual editor integration",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"tsx watch --env-file=.env src/server.tsx\" \"esbuild src/client/index.tsx --bundle --outfile=dist/client.js --platform=browser --format=iife --watch\"",
    "build": "tsc && npm run build:client",
    "build:client": "esbuild src/client/index.tsx --bundle --outfile=dist/client.js --platform=browser --format=iife",
    "start": "node --env-file=.env dist/server.js"
  },
  "dependencies": {
    "@makeswift/runtime": "workspace:^",
    "@types/cookie-parser": "^1.4.8",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
